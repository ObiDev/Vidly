@model Vidly.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Release Date: @Model.ReleaseDate.ToString($"dddd"), @Model.ReleaseDate.ToString($"MMMM") @Model.ReleaseDate.ToString($"dd"), @Model.ReleaseDate.ToString($"yyyy") </li>
    <li>Date Added: @Model.ReleaseDate.ToString($"dddd"), @Model.DateAdded.ToString($"MMMM") @Model.DateAdded.ToString($"dd"), @Model.DateAdded.ToString($"yyyy") </li>
    <li>Number in stock: @Model.NumberInStock</li>
</ul>


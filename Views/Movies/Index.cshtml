@model List<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

<a>@Html.ActionLink("New Movie","New", null, new { @class = "btn btn-primary", style = "margin-bottom: 20px" }) </a>

<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>
                Movies
            </th>
            <th>
                Genre
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(movie.Name, "Edit", "Movies", new { id = movie.Id }, null )
                </td>
                <td>
                    @movie.Genre.Name
                </td>
            </tr>
        }
    </tbody>
</table>

